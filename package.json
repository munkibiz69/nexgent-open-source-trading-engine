{
  "name": "nexgent-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Open-source Solana AI agent trading automation framework",
  "scripts": {
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "dev:clean": "node scripts/cleanup-next.js && node scripts/cleanup-ports.js --force && pnpm dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "cleanup:ports": "node scripts/cleanup-ports.js",
    "cleanup:ports:force": "node scripts/cleanup-ports.js --force",
    "cleanup:frontend": "node scripts/cleanup-next.js",
    "cleanup:all": "node scripts/cleanup-next.js && node scripts/cleanup-ports.js --force",
    "build": "pnpm -r build",
    "build:skip-tests": "pnpm -r build:skip-tests",
    "build:ci": "pnpm -r build:ci",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "start": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"pnpm --filter backend start\" \"pnpm --filter frontend start\"",
    "start:backend": "pnpm --filter backend start",
    "start:frontend": "pnpm --filter frontend start",
    "build:start": "pnpm build && pnpm start",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter backend test",
    "test:frontend": "pnpm --filter frontend test",
    "lint": "pnpm -r lint",
    "lint:backend": "pnpm --filter backend lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "type-check": "pnpm -r type-check",
    "type-check:backend": "pnpm --filter backend type-check",
    "type-check:frontend": "pnpm --filter frontend type-check",
    "generate-secret": "pnpm --filter frontend generate-secret",
    "generate-secret:backend": "pnpm --filter backend generate-secret"
  },
  "devDependencies": {
    "@types/node": "^20.17.12",
    "concurrently": "^9.2.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "qs@<6.14.1": ">=6.14.1",
      "@modelcontextprotocol/sdk@<1.25.2": ">=1.25.2",
      "preact@>=10.27.0 <10.27.3": ">=10.27.3",
      "hono@<4.11.4": ">=4.11.4",
      "tar@<=7.5.2": ">=7.5.3",
      "diff@<8.0.3": ">=8.0.3"
    }
  }
}