{
  "name": "@nexgent/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "pnpm test:unit && pnpm test:integration",
    "build": "pnpm db:generate && tsc && tsc-alias",
    "build:skip-tests": "pnpm db:generate && tsc && tsc-alias",
    "build:ci": "pnpm test:unit && pnpm test:integration && pnpm build",
    "start": "node dist/backend/src/index.js",
    "test": "pnpm db:test:migrate && jest --runInBand",
    "test:unit": "jest tests/unit",
    "test:integration": "pnpm db:test:migrate && jest tests/integration --runInBand",
    "lint": "eslint src",
    "type-check": "pnpm db:generate && tsc --noEmit",
    "db:generate": "node scripts/clean-prisma-output.js && prisma generate --schema=./src/infrastructure/database/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./src/infrastructure/database/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./src/infrastructure/database/schema.prisma",
    "db:test:migrate": "node scripts/migrate-test-db.js",
    "db:studio": "prisma studio --schema=./src/infrastructure/database/schema.prisma",
    "db:push": "prisma db push --schema=./src/infrastructure/database/schema.prisma",
    "webhook:tunnel": "node scripts/webhook-tunnel.js",
    "generate-secret": "node scripts/generate-secret.js",
    "cache:status": "node scripts/cache-manage.js status",
    "cache:warmup": "node scripts/cache-manage.js warmup",
    "cache:reset": "node scripts/cache-manage.js reset"
  },
  "dependencies": {
    "@nexgent/shared": "workspace:*",
    "@prisma/client": "^5.22.0",
    "@solana/web3.js": "^1.87.0",
    "bcrypt": "^5.1.1",
    "bs58": "^5.0.0",
    "bullmq": "^5.65.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "eventsource": "^4.1.0",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.19.0",
    "prom-client": "^15.1.3",
    "ws": "^8.16.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.15.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.17.12",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.10",
    "babel-jest": "^30.2.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.15.0"
  }
}